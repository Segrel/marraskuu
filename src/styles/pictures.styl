@import nib

@keyframes blurIn {
  from {
    -webkit-filter: blur(15px)
  }
  to {
    -webkit-filter: blur(0)
  }
}

.picture-container
  background-size: cover
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: -500

.picture-beijing
  background-image: url('beijing_night-jonathankosread.jpg')
  animation: blurIn ease-in 1
  animatin-fill-mode: forwards
  animation-duration: 1s
